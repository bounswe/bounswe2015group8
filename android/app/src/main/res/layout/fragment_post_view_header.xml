<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary_light"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="@dimen/relative_layout_margin">
    <TextView
        android:id="@+id/tvPostViewOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/generic_owner"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/relative_layout_margin_between"/>

    <TextView
        android:id="@+id/tvPostViewOwnerValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvPostViewOwner"
        android:layout_toRightOf="@id/tvPostViewOwner"
        android:layout_toEndOf="@id/tvPostViewOwner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/primary_light"
        android:text="@string/placeholder_mid"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/secondary_text"
        android:textSize="20sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/relative_layout_margin_between"
        android:layout_marginStart="@dimen/relative_layout_margin_between"/>
    <TextView
        android:id="@+id/tvPostViewCreationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPostViewOwner"
        android:layout_alignLeft="@id/tvPostViewOwner"
        android:layout_alignStart="@id/tvPostViewOwner"
        android:text="@string/heritage_creationDate"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/relative_layout_margin_between"/>
    <TextView
        android:id="@+id/tvPostViewCreationDateValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvPostViewCreationDate"
        android:layout_alignRight="@id/tvPostViewOwnerValue"
        android:layout_alignEnd="@id/tvPostViewOwnerValue"
        android:layout_toRightOf="@id/tvPostViewCreationDate"
        android:layout_toEndOf="@id/tvPostViewCreationDate"
        android:background="@color/primary_light"
        android:text="@string/placeholder_mid"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/relative_layout_margin_between"
        android:layout_marginStart="@dimen/relative_layout_margin_between"/>
    <TextView
        android:id="@+id/tvPostViewLastEditDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPostViewCreationDate"
        android:layout_alignLeft="@id/tvPostViewCreationDate"
        android:layout_alignStart="@id/tvPostViewCreationDate"
        android:text="@string/post_last_edit_date"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPostViewLastEditDateValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvPostViewLastEditDate"
        android:layout_alignRight="@id/tvPostViewCreationDateValue"
        android:layout_alignEnd="@id/tvPostViewCreationDateValue"
        android:layout_toRightOf="@id/tvPostViewLastEditDate"
        android:layout_toEndOf="@id/tvPostViewLastEditDate"
        android:background="@color/primary_light"
        android:text="@string/placeholder_mid"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/relative_layout_margin_between"
        android:layout_marginStart="@dimen/relative_layout_margin_between"/>
    <TextView
        android:id="@+id/tvPostViewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPostViewLastEditDate"
        android:layout_alignLeft="@id/tvPostViewLastEditDate"
        android:layout_alignStart="@id/tvPostViewLastEditDate"
        android:text="@string/generic_content"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/relative_layout_margin_between"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPostViewContentValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvPostViewContent"
        android:layout_alignStart="@id/tvPostViewContent"
        android:layout_alignRight="@id/tvPostViewCreationDateValue"
        android:layout_alignEnd="@id/tvPostViewCreationDateValue"
        android:layout_below="@id/tvPostViewContent"
        android:background="@color/primary_light"
        android:text="@string/hint_heritage_description"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/relative_layout_margin_between"/>
    <LinearLayout
        android:id="@+id/llPostViewButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPostViewContentValue"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/relative_layout_margin_between">
        <Button
            android:id="@+id/btnPostViewEdit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/accent"
            android:text="@string/btn_edit"
            android:textColor="@color/primary_light"
            android:elevation="@dimen/btn_elevation"/>
        <Button
            android:id="@+id/btnPostViewNewComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/accent"
            android:text="@string/btn_new_comment"
            android:textColor="@color/primary_light"
            android:elevation="@dimen/btn_elevation"/>
    </LinearLayout>
</RelativeLayout>

