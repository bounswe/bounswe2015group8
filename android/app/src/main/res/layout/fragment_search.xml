<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/relative_layout_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tvSearchFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/search_type"
            android:textSize="20sp"
            android:textColor="@color/primary_text"/>
        <Spinner
            android:id="@+id/spSearchFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/tvSearchFor"
            android:layout_toEndOf="@id/tvSearchFor"
            android:layout_alignTop="@id/tvSearchFor"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/relative_layout_margin_between"
            android:layout_marginStart="@dimen/relative_layout_margin_between"
             />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/etSearch1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:background="@color/primary_light"
            android:hint="@string/hint_search"
            android:textColorHint="@color/secondary_text"
            android:inputType="text"
            android:padding="@dimen/relative_layout_margin_between"
            android:singleLine="true"
            android:layout_marginRight="@dimen/relative_layout_margin_between"
            android:layout_marginEnd="@dimen/relative_layout_margin_between"
            android:elevation="@dimen/btn_elevation"/>
        <EditText
            android:id="@+id/etSearch2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:background="@color/primary_light"
            android:hint="@string/hint_tag_context"
            android:textColorHint="@color/secondary_text"
            android:inputType="text"
            android:padding="@dimen/relative_layout_margin_between"
            android:singleLine="true"
            android:elevation="@dimen/btn_elevation"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/accent"
        android:text="@string/hint_search"
        android:textColor="@color/primary_text"
        android:elevation="@dimen/btn_elevation"/>
</LinearLayout>

