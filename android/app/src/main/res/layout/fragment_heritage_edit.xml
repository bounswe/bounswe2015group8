<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary"
    android:gravity="center"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:rowCount="7"
        android:columnCount="2">
        <TextView
            android:id="@+id/tvHeritageEditName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_margin="5dp"
            android:text="@string/generic_name"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/etHeritageEditName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_margin="5dp"
            android:background="@color/primary_light"
            android:textColor="@color/primary_text"
            android:hint="@string/hint_heritage_name"
            android:textColorHint="@color/secondary_text"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/tvHeritageEditPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_margin="5dp"
            android:text="@string/heritage_place"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/etHeritageEditPlace"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_margin="5dp"
            android:background="@color/primary_light"
            android:textColor="@color/primary_text"
            android:hint="@string/hint_heritage_place"
            android:textColorHint="@color/secondary_text"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tvHeritageEditDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:layout_margin="5dp"
            android:text="@string/generic_description"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/etHeritageEditDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:layout_rowSpan="3"
            android:layout_margin="5dp"
            android:background="@color/primary_light"
            android:textColor="@color/primary_text"
            android:hint="@string/hint_heritage_description"
            android:textColorHint="@color/secondary_text"
            android:inputType="text"
            android:padding="10dp"
            android:minLines="3"
            android:maxLines="3"/>

        <Button
            android:id="@+id/btnHeritageSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_rowSpan="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:background="#FFEB3B"
            android:text="@string/btn_submit"
            android:textColor="@color/primary_text" />


    </GridLayout>


</LinearLayout>

