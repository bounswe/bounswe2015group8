<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvHomeName"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:textColor="@color/accent"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/profilePicture"
        android:layout_centerHorizontal="true" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listPosts"
            android:layout_marginTop="47dp"
            android:layout_alignTop="@+id/yourPosts"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Posts:"
            android:id="@+id/yourPosts"
            android:padding="10dp"
            android:textColor="@color/accent"
            android:textSize="18dp"
            android:layout_below="@+id/postsText"
            android:layout_marginTop="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profilePicture"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:contextClickable="false"
            android:longClickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:id="@+id/postsText"
            android:padding="10dp"
            android:textColor="@color/accent"
            android:textSize="20dp"
            android:layout_alignTop="@+id/followerText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:id="@+id/followerText"
            android:padding="10dp"
            android:textColor="@color/accent"
            android:textSize="20dp"
            android:layout_marginTop="49dp"
            android:layout_below="@+id/tvHomeName"
            android:layout_alignRight="@+id/tvHomeName"
            android:layout_alignEnd="@+id/tvHomeName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            android:id="@+id/followingText"
            android:layout_alignTop="@+id/followerText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:textColor="@color/accent"
            android:textSize="20dp" />
</RelativeLayout>