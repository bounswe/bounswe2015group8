<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/tvHomeName"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:textColor="@color/accent"
    android:textSize="24dp"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/textWelcome"
    android:layout_toEndOf="@+id/textWelcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/textWelcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tvHomeName"
        android:padding="10dp"
        android:textColor="@color/accent"
        android:textSize="24dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listPosts"
        android:layout_below="@+id/tvHomeName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Posts:"
        android:id="@+id/yourPosts"
        android:padding="10dp"
        android:textColor="@color/accent"
        android:textSize="18dp"
        android:layout_below="@+id/textWelcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>