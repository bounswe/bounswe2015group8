<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/rlTagSmallEdit"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginRight="@dimen/relative_layout_margin_between"
    android:layout_marginEnd="@dimen/relative_layout_margin_between"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">
    <ImageView
        android:id="@+id/ivTagSmallEditCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/relative_layout_margin_between"
        android:layout_marginStart="@dimen/relative_layout_margin_between"
        android:src="@drawable/ic_clear_black_24dp"
        android:layout_marginTop="@dimen/relative_layout_margin_between"/>
    <ImageView
        android:id="@+id/ivTagSmallEditAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ivTagSmallEditCancel"
        android:layout_toStartOf="@id/ivTagSmallEditCancel"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_marginTop="@dimen/relative_layout_margin_between"/>
    <EditText
        android:id="@+id/etTagSmallEditText"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/placeholder_short"
        android:textColor="@color/primary_text"
        android:textSize="20sp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/etTagSmallEditContext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ivTagSmallEditAccept"
        android:layout_toStartOf="@id/ivTagSmallEditAccept"
        android:layout_toRightOf="@id/etTagSmallEditText"
        android:layout_toEndOf="@id/etTagSmallEditText"
        android:layout_alignBottom="@id/etTagSmallEditText"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:text="@string/placeholder_short"
        android:textColor="@color/primary_text"
        android:textSize="17sp"
        android:textStyle="italic"
        android:inputType="text"/>
</RelativeLayout>