<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.CommentVote" table="COMMENT_VOTE" schema="" catalog="test">
        <composite-id mapped="true" class="model.CommentVotePK">
            <key-property name="member">
                <column name="MEMBER_ID" sql-type="bigint" not-null="true"/>
            </key-property>
            <key-property name="comment">
                <column name="COMMENT_ID" sql-type="bigint" not-null="true"/>
            </key-property>
        </composite-id>
        <property name="voteType">
            <column name="VOTE_TYPE" sql-type="tinyint" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>