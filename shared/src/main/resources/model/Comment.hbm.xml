<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Comment" table="COMMENT" schema="" catalog="test">
        <id name="id">
            <column name="ID" sql-type="bigint" not-null="true"/>
        </id>
        <many-to-one name="owner" class="model.Member" fetch="select">
            <column name="OWNER_ID" sql-type="bigint" not-null="true"/>
        </many-to-one>
        <many-to-one name="post" class="model.Post" fetch="select">
            <column name="POST_ID" sql-type="bigint" not-null="true"/>
        </many-to-one>
        <property name="content">
            <column name="CONTENT" sql-type="text" length="65535" not-null="true"/>
        </property>
        <property name="postDate">
            <column name="POST_DATE" sql-type="timestamp" not-null="true"/>
        </property>
        <property name="lastEditedDate">
            <column name="LAST_EDITED_DATE" sql-type="timestamp"/>
        </property>
        <set name="votes" table="COMMENT_VOTE" inverse="true" lazy="true" fetch="select" cascade="save-update">
            <key column="COMMENT_ID"/>
            <one-to-many class="model.CommentVote" />
        </set>
    </class>
</hibernate-mapping>