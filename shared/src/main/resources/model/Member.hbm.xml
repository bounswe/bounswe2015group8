<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Member" table="MEMBER" schema="" catalog="test">
        <id name="id">
            <column name="ID" sql-type="bigint" not-null="true"/>
        </id>
        <property name="username">
            <column name="USERNAME" sql-type="varchar" length="64" not-null="true"/>
        </property>
        <property name="password">
            <column name="PASSWORD" sql-type="varchar" length="128" not-null="true"/>
        </property>
        <property name="email">
            <column name="EMAIL" sql-type="varchar" length="64" not-null="true"/>
        </property>
        <property name="profilePicture">
            <column name="PROFILE_PICTURE" sql-type="varchar" length="256"/>
        </property>
        <set name="followedMembers" table="FOLLOW" lazy="true" fetch="select" cascade="save-update">
            <key column="FOLLOWEE_ID" />
            <many-to-many column="FOLLOWER_ID" class="model.Member" />
        </set>
        <set name="followers" table="FOLLOW" lazy="true" fetch="select" cascade="save-update">
            <key column="FOLLOWER_ID" />
            <many-to-many column="FOLLOWEE_ID" class="model.Member" />
        </set>
        <set name="posts" table="POST" inverse="true" lazy="true" fetch="select" cascade="save-update">
            <key column="OWNER"/>
            <one-to-many class="model.Post" />
        </set>
    </class>
</hibernate-mapping>