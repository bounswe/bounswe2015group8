<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Comment" table="COMMENT" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="content" column="CONTENT"/>
        <property name="postDate" column="POST_DATE"/>
        <property name="lastEditedDate" column="LAST_EDITED_DATE"/>
    </class>
    <class name="model.Heritage" table="HERITAGE" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="name" column="NAME"/>
        <property name="place" column="PLACE"/>
        <property name="postDate" column="POST_DATE"/>
        <property name="description" column="DESCRIPTION"/>
        <set name="posts" table="HERITAGE_POST" cascade="save-update">
            <key column="HERITAGE_ID"/>
            <many-to-many column="POST_ID" class="model.Post" />
        </set>
    </class>
    <class name="model.Media" table="MEDIA" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="postOrHeritageId" column="POST_OR_HERITAGE_ID"/>
        <property name="mediaLink" column="MEDIA_LINK"/>
        <property name="mediaType" column="MEDIA_TYPE"/>
        <property name="postOrHeritage" column="POST_OR_HERITAGE"/>
    </class>
    <class name="model.Member" table="MEMBER" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="username" column="USERNAME"/>
        <property name="password" column="PASSWORD"/>
        <property name="email" column="EMAIL"/>
        <property name="profilePicture" column="PROFILE_PICTURE"/>
    </class>
    <class name="model.Post" table="POST" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="type" column="TYPE"/>
        <property name="postDate" column="POST_DATE"/>
        <property name="lastEditedDate" column="LAST_EDITED_DATE"/>
        <property name="title" column="TITLE"/>
        <property name="content" column="CONTENT"/>
        <set name="heritages" table="HERITAGE_POST" cascade="save-update">
            <key column="POST_ID"/>
            <many-to-many column="HERITAGE_ID" class="model.Heritage" />
        </set>
    </class>
    <class name="model.Tag" table="TAG" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="tagText" column="TAG_TEXT"/>
    </class>
    <class name="model.Comment" table="COMMENT" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="content" column="CONTENT"/>
        <property name="postDate" column="POST_DATE"/>
        <property name="lastEditedDate" column="LAST_EDITED_DATE"/>
    </class>
    <class name="model.Heritage" table="HERITAGE" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="name" column="NAME"/>
        <property name="place" column="PLACE"/>
        <property name="postDate" column="POST_DATE"/>
        <property name="description" column="DESCRIPTION"/>
    </class>
    <class name="model.Media" table="MEDIA" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="postOrHeritageId" column="POST_OR_HERITAGE_ID"/>
        <property name="mediaLink" column="MEDIA_LINK"/>
        <property name="mediaType" column="MEDIA_TYPE"/>
        <property name="postOrHeritage" column="POST_OR_HERITAGE"/>
    </class>
    <class name="model.Member" table="MEMBER" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="username" column="USERNAME"/>
        <property name="password" column="PASSWORD"/>
        <property name="email" column="EMAIL"/>
        <property name="profilePicture" column="PROFILE_PICTURE"/>
    </class>
    <class name="model.Post" table="POST" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="type" column="TYPE"/>
        <property name="postDate" column="POST_DATE"/>
        <property name="lastEditedDate" column="LAST_EDITED_DATE"/>
        <property name="title" column="TITLE"/>
        <property name="content" column="CONTENT"/>
    </class>
    <class name="model.Tag" table="TAG" schema="" catalog="test">
        <id name="id" column="ID"/>
        <property name="tagText" column="TAG_TEXT"/>
    </class>
</hibernate-mapping>