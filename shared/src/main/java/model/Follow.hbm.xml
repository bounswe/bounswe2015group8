<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Follow" table="FOLLOW" schema="" catalog="test">
        <composite-id mapped="true" class="model.FollowPK">
            <key-property name="followerId">
                <column name="FOLLOWER_ID" sql-type="bigint" not-null="true"/>
            </key-property>
            <key-property name="followeeId">
                <column name="FOLLOWEE_ID" sql-type="bigint" not-null="true"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>